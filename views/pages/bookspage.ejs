<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="icon" type="image/x-icon" href="book-library.svg">
  </head>
  <body>
    <div id="app" class="container">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Book Control</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="#">Books</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="#">Teachers</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="#">Students</a>
                  </li>
                  <li class="d-flex nav-item">
                      <a class="nav-link" @click="eraseCookie" style="cursor: pointer;">Log Out</a>
                  </li>
              </div>
            </div>
        </nav>

        <div class="row mt-4">
            <div class="col">
                <h1 class="display-6">Books</p>
            </div>
            <div class="col text-end">
              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#insertBookModal">Insert New</button>
          </div>
        </div>

        <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Belongs To</th>
                <th scope="col">Class</th>
                <th scope="col">Borrowed By</th>
                <th scope="col">Date Of Borrow</th>
                <th scope="col">Times Borrowed</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="book in books">
                <td>{{ book.bookName }}</td>
                <td>{{ book.belongsTo }}</td>
                <td>{{ book.class }}</td>
                <td>{{ book.borrowedBy }}</td>
                <td>{{ book.dateOfBorrow }}</td>
                <td>{{ book.timesBorrowed }}</td>
                <td>
                    <i class="bi bi-pencil-square" style="font-size: 1.3rem; color: blue; cursor: pointer;"></i>
                    <i data-bs-toggle="modal" data-bs-target="#deleteBookModal" class="bi bi-trash ms-2" style="cursor: pointer; font-size: 1.3rem; color: red" @click="deleteBook('_94487kdsdhjsd99')"></i>
                </td>
              </tr>
            </tbody>
        </table>
            
        <!-- Delete Boook Modal -->
        <div class="modal fade" id="deleteBookModal" tabindex="-1" aria-labelledby="deleteBookModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteBookModalLabel">Delete Book</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Do you really want to remove the book?
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>
          </div>
        </div>

        <!-- Insert Boook Modal -->
        <div class="modal fade" id="insertBookModal" tabindex="-1" aria-labelledby="insertBookModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header px-4">
                <h5 class="modal-title">Insert Book</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body px-4">
                <div class="mb-3">
                  <label for="nameFormControlInput" class="form-label">Name</label>
                  <input type="text" v-model="newBook.bookName" class="form-control" id="nameFormControlInput">
                </div>
                <div class="mb-3">
                  <label for="belongsToFormControlInput" class="form-label">Belongs To</label>
                  <input type="text" v-model="newBook.belongsTo" class="form-control" id="belongsToFormControlInput">
                </div>
                <div class="mb-3">
                  <label for="classFormControlInput" class="form-label">Class</label>
                  <input type="text" v-model="newBook.class" class="form-control" id="classFormControlInput">
                </div>
              </div>
              <div class="modal-footer px-4">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" @click="insertNew">Save changes</button>
              </div>
            </div>
          </div>
        </div>

    </div>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script>
        const { createApp } = Vue
      
        createApp({
          data() {
            return {
              books: [],
              newBook: {
                bookName: '',
                belongsTo: '',
                class: ''
              }
            }
          },

          mounted() {
            this.getBooks();
          },

          methods: {
            getBooks() {
              fetch('/books')
              .then((response) => response.json())
              .then((data) => this.books = data);
            },

            insertNew() {
              fetch('/books', {
                method: 'POST',
                headers: {
                  'Accept': 'application/json',
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify(this.newBook)
              })
                .then((response) => response.json())
                .then(() => this.getBooks());
            },

            deleteBook(id) {
              console.log('Delete book', id)
            },

            eraseCookie() {
              document.cookie = 'pageToken=; Max-Age=-99999999;';
              window.location.replace('/');
            }
          }
        }).mount('#app')
      </script>
  </body>
</html>